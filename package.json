{
    "name": "reactprojscaffold",
    "version": "1.0.0",
    "description": "Scaffolding for fullstack react application",
    "main": "lib/server.js",
    "scripts": {
        "//": "specifying the NODE_PATH var below specifies the beggining of absolute paths used in the app for imports",
        "///": "https://www.codementor.io/michaelumanah/how-to-set-up-babel-7-and-nodemon-with-node-js-pbj7cietc",
        "dev": "nodemon --exec babel-node lib/server.js",
        "pm2": "NODE_PATH=./lib pm2 start lib/server.js --watch --interpreter babel-node",
        "start": "node lib/server.js",
        "webpack": "webpack-dev-server --hot --inline",
        "e2e": "jest --watchAll"
    },
    "author": "Sammy Al Hashemi",
    "license": "ISC",
    "dependencies": {
        "@babel/polyfill": "^7.4.4",
        "@hot-loader/react-dom": "^16.8.6",
        "axios": "^0.18.0",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "pug": "^2.0.3",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-hot-loader": "^4.8.8"
    },
    "devDependencies": {
        "@babel/cli": "^7.4.4",
        "@babel/core": "^7.4.5",
        "@babel/node": "^7.4.5",
        "@babel/preset-env": "^7.4.5",
        "@babel/preset-react": "^7.0.0",
        "babel-eslint": "^10.0.1",
        "babel-loader": "^8.0.6",
        "eslint": "^5.16.0",
        "jest": "^24.8.0",
        "nodemon": "^1.19.1",
        "pm2": "^3.5.1",
        "webpack": "^4.32.2",
        "webpack-cli": "^3.3.2",
        "webpack-dev-middleware": "^3.7.0",
        "webpack-dev-server": "^3.4.1",
        "webpack-hot-middleware": "^2.25.0"
    }
}
